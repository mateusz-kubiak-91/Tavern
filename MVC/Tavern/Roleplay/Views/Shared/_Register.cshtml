@model RegisterViewModel

@using (Html.BeginForm("Register", "Home", FormMethod.Post))
{
    <div class="form-group text-center">
        @Html.LabelFor(x => x.Login)
        <br />
        @Html.TextBoxFor(x => x.Login, new {placeholder="Enter Login"})
        <br />
    </div>
    <div class="form-group text-center">
        @Html.LabelFor(x => x.Email)
        <br />
        @Html.TextBoxFor(x => x.Email, new {placeholder = "Enter E-mail"})
        <br />
    </div>
    <div class="form-group text-center">
        @Html.LabelFor(x => x.Password)
        <br />
        @Html.PasswordFor(x => x.Password, new {placeholder = "Enter Password"})
        <br />
    </div>
    <div class="form-group text-center">
        @Html.LabelFor(x => x.RepeatPassword)
        <br />
        @Html.PasswordFor(x => x.RepeatPassword, new {placeholder = "Repeat Password"})
        <br />
    </div>
    <div class="form-group text-center">
        <button class="btn btn-dark">Register</button>
        <br />
    </div>
        @Html.ValidationSummary()
}
